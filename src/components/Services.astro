---
//@ts-nocheck
import servicesData from "@data/services.json";
console.log(servicesData);
---

<ul>
  {
    servicesData.services.map((service) => (
      <li>
        <h2>{service.title}</h2>
        <p>{service.description}</p>
        <a href="#0">{service.buttonText}</a>
      </li>
    ))
  }
</ul>

<section>
  
</section>

<style>
  @layer components {
     ul {
      list-style: none;
      margin: 0;
      padding: 2rem;
      position: absolute;
      bottom: -220px;
      left: 0;
      right: 0;
      z-index: 10;
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 2rem;
      max-width: 1200px;
      margin-left: auto;
      margin-right: auto;
    }
    li {
      background-color: #262626E5;
      border-radius: 20px;
      padding: 36px;
      color: var(--color-white);
      display: flex;
      flex-direction: column;
      min-height: 200px;
      justify-content: center;
      gap: 10px;
      flex: 1 0 0;
      background: rgba(38, 38, 38, 0.90);
      backdrop-filter: blur(16px);
    }
    h2{
      font-size: 25px;
      color: var(--color-white);
      font-family: "Cabin", sans-serif;
      font-weight: 600;
      line-height: 116%;
      font-style: normal;
      text-align: left;
      margin: 0;
    }

    p{
      font-size: 16px;
      font-family: "Lato", sans-serif;
      font-weight: 400;
      color: var(--color-white);
      margin: 0 0 2rem 0;
      flex-grow: 1;
      text-align: left;
      line-height: 147%;

    }
    a{
      background-color: #151515;
      color: var(--color-white);
      border: none;
      border-radius: 55px;
      padding: 12px 24px;
      gap: 10px;
      font-family: "Lato", sans-serif;
      font-size: 18px;
      text-align: center;
      line-height: 160%;
      text-decoration: none;
      display: inline-block;
      width: fit-content;
      transition: all 0.3s ease;
      margin-top: auto;
    }
     a:hover {
      background-color: var(--color-yellow);
      color: var(--color-black);
      transform: translateY(-2px);
    }

    /* Large tablet */
    @media (max-width: 1200px) {
      ul {
        bottom: -240px;
        gap: 1.5rem;
        padding: 1.5rem;
      }
      
      li {
        padding: 30px;
      }
    }
    @media (max-width: 968px) {
      ul {
        grid-template-columns: repeat(2, 1fr);
        gap: 1.5rem;
        padding: 1.5rem;
        bottom: -180px;
      }

      li {
        padding: 2rem 1.5rem;
      }
    }
     /* Small tablet */
    @media (max-width: 768px) {
      ul {
        bottom: -120px;
        gap: 1rem;
      }
      
      li {
        padding: 1.5rem;
        min-height: 160px;
      }
    }

    @media (max-width: 640px) {
      ul {
        grid-template-columns: 1fr;
        gap: 1rem;
        padding: 1rem;
        position: static;
        bottom: 0;
        margin-top: 2rem;
      }

      li {
        padding: 1.5rem;
        min-height: 200px;
      }

      h2 {
        font-size: 20px;
        margin-bottom: 1rem;
      }

      p {
        font-size: 14px;
        margin-bottom: 1.5rem;
      }

      a {
        padding: 12px 20px;
        font-size: 14px;
      }
    }

     @media (max-width: 480px) {
      ul {
        padding: 0.5rem;
        gap: 0.5rem;
      }
      
      li {
        padding: 1rem;
        min-height: 140px;
      }
      
      h2 {
        font-size: 18px;
      }
      
      p {
        font-size: 13px;
      }
      
      a {
        padding: 10px 16px;
        font-size: 13px;
      }
    }
  }
</style>
