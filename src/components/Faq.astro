---
import faqData from "@data/faq.json"
console.log(faqData);
---

<section class="faq">
  <div class="faq-header">
    <span class="faq-label">FAQ</span>
    <h2>Customer Questions</h2>
  </div>
  
  <div class="accordion-container">
    {faqData.faq.map((item, index) => (
      <details class="faq-item" name="faq">
        <summary>
          <span class="question-text">{item.question}</span>
          <span class="toggle-icon">+</span>
        </summary>
        <div class="answer">
          {item.answer.split('\n\n').map((paragraph) => (
            <p>{paragraph}</p>
          ))}
        </div>
      </details>
    ))}
  </div>
</section>

<style>
    .faq{
        padding: 4rem 2rem;
        background: #f5f5f5;
    }

    .faq-header{
        text-align: center;
        margin-bottom: 3rem;
    }
    .faq-label {
    font-size: 0.875rem;
    color: #666;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    display: block;
    margin-bottom: 1rem;
  }

  .faq-header h2 {
    font-size: 2rem;
    font-weight: 700;
    color: #181818;
    margin: 0;
  }

   .accordion-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .faq-item {
    border-bottom: 1px solid #dadada;
    color: #181818;
  }

  .faq-item:last-child {
    border-bottom: none;
  }

   summary {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem 0;
    cursor: pointer;
    font-weight: 600;
    font-size: 1rem;
    user-select: none;
    list-style: none;
  }

  summary::-webkit-details-marker {
    display: none;
  }

  summary::marker {
    content: "";
  }

 .question-text {
    flex: 1;
    text-align: left;
  }

  .toggle-icon {
    font-size: 1.5rem;
    font-weight: 300;
    transition: transform 0.2s ease;
    margin-left: 1rem;
  }

  .faq-item[open] .toggle-icon {
    transform: rotate(45deg);
  }

  .answer {
    padding-bottom: 1.5rem;
    color: #595566;
    line-height: 1.6;
  }
  .answer p {
    margin: 0 0 1em 0;
  }

  .answer p:last-child {
    margin-bottom: 0;
  }
</style>