<section class="subscribe">
    <div class="container">
        <div class="subscribe-content">
            <div class="subscribe-text">
                <h3>Subscribe Our Newsletter</h3>
                <p>Build stronger Customer Relationships with Consultalk</p>
            </div>
            
            <div class="subscribe-form">
                <input type="email" placeholder="your mail address" />
                <button>Subscribe</button>
            </div>
        </div>
        
        <!-- Decorative elements -->
        <div class="pattern-dots"></div>
        <div class="green-circle"></div>
    </div>
</section>

<style>
  .subscribe {
        padding: 60px 0;
        position: relative;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
        position: relative;
        z-index: 2;
    }

 .subscribe-content {
        background-color: black;
        border-radius: 20px;
        padding: 50px 60px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 40px;
        position: relative;
        overflow: hidden;
    }

    .subscribe-text{
        flex: 1;
    }

    .subscribe-text h3 {
        font-size: 32px;
        font-weight: 700;
        color: var(--color-white);
        margin-bottom: 15px;
        line-height: 1.2;
    }

    .subscribe-text p {
        font-size: 16px;
        color: #ccc;
        margin: 0;
    }

    .subscribe-form {
        display: flex;
        gap: 15px;
        align-items: center;
        flex-shrink: 0;
    }

     .subscribe-form input {
        padding: 15px 20px;
        border: none;
        border-radius: 4px;
        background-color: var(--color-white);
        font-size: 16px;
        min-width: 250px;
        outline: none;
    }

    .subscribe-form input::placeholder {
        color: #999;
    }

     .subscribe-form button {
        padding: 15px 30px;
        border: none;
        border-radius: 30px;
        background-color: var(--color-yellow);
        color: var(--color-black);
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        white-space: nowrap;
    }

    .subscribe-form button:hover {
        background-color: #e6b800;
        transform: translateY(-2px);
    }

     /* Decorative dots pattern */
    .pattern-dots {
       position: absolute;
        top: 10px;
        right: -15px;
        rotate: 35deg;
        width: 200px;
        height: 100px;
        background-image: radial-gradient(circle, #ffd700 2px, transparent 2px);
        background-size: 15px 15px;
        opacity: 0.6;
        z-index: 1;
    }

    @media (max-width: 768px) {
        .subscribe-content {
            flex-direction: column;
            text-align: center;
            padding: 40px 30px;
        }

        .subscribe-text h3 {
            font-size: 28px;
        }

        .subscribe-form {
            flex-direction: column;
            width: 100%;
        }

        .subscribe-form input {
            min-width: auto;
            width: 100%;
        }

        .subscribe-form button {
            width: 100%;
        }
    }
</style>